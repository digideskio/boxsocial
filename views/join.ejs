<div data-role="page">
    <%- partial("header") %>
    <div data-role="content">
        <% 
        if (guest) {
            %>
            <p>Hello <b><%= guest.session.user %></b>.</p>
            <%
        }
        %>
        <p>To join a party please enter your <a href="/glossary#host">host</a>'s Last.fm username.</p>
        <form action="/join" method="post">
            <fieldset>
                <label for="host">Host's username:</label>
                <input type="text" name="host" id="host" />
                <input type="submit" value="Join" />
            </fieldset>
        </form>
    </div>
    <%- partial("footer") %>
</div>
